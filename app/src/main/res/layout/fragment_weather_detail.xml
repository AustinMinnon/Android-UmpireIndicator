<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.umpireindicator.ui.WeatherDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_height="317dp"
        android:padding="10dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/weatherImageView"
            android:src="@drawable/weather"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationTextView"
            android:text="Location"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dayTextView"
            android:textSize="20dp"
            android:text="Sunday" />

        <TextView
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/mainTextView"
            android:textSize="20sp" />

        <TextView
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today is clear with a chance of sunshine"
            android:id="@+id/descriptionTextView"
            android:textStyle="bold|italic"
            android:textSize="15dp" />

        <TextView
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lowTextView"
            android:text="Low Temp: 56ºF"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/highTextView"
            android:text="High Temp: 72ºF"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
