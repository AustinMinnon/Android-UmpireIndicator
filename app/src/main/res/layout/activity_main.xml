<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/scoreCol">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home 0"
            android:id="@+id/homeText"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@android:color/background_light"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Away 0"
            android:id="@+id/awayText"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/optionCol"
        android:layout_below="@+id/teamCol">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:layout_centerInParent="true"
            android:text="+"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorPlus"
            android:id="@+id/plusHome" />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/laces"
                android:text="-"
                android:layout_centerInParent="true"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorMinus"
                android:id="@+id/minusHome" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/laces"
                android:text="+"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorPlus"
                android:layout_centerInParent="true"
                android:id="@+id/plusAway" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/laces"
                android:text="-"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorMinus"
                android:id="@+id/minusAway"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/teamCol"
        android:layout_below="@+id/scoreCol">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:id="@+id/homeAltText"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:id="@+id/awayAltText"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"
            android:layout_weight="1" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inningLayout"
        android:layout_below="@+id/optionCol">



    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:id="@+id/inningCol"
        android:layout_below="@+id/optionCol">


        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="+"
            android:textColor="@color/colorPlus"
            android:id="@+id/plusInning"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:layout_weight="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Inning 1â†‘"
            android:id="@+id/inningText"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:layout_weight="1"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:text="-"
            android:textColor="@color/colorMinus"
            android:id="@+id/minusInning"
            android:layout_weight="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/outCol"
        android:id="@+id/linearLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="+"
            android:textColor="@color/colorPlus"
            android:id="@+id/plusBall"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:layout_weight="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Ball 0"
            android:id="@+id/ballText"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"
            android:layout_weight="1" />

        <Button
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:text="-"
            android:textColor="@color/colorMinus"
            android:id="@+id/minusBall"
            android:layout_weight="0"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/strikeCol">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:text="+"
            android:textColor="@color/colorPlus"
            android:id="@+id/plusStrike"
            android:layout_weight="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Strike 0"
            android:id="@+id/strikeText"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:layout_weight="1"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:text="-"
            android:textColor="@color/colorMinus"
            android:id="@+id/minusStrike"
            android:layout_weight="0"
            />

        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/inningCol"
        android:id="@+id/outCol">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="+"
            android:textColor="@color/colorPlus"
            android:id="@+id/plusOut"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:layout_weight="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:text="Out 0"
            android:id="@+id/outText"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:layout_weight="1"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:text="-"
            android:textColor="@color/colorMinus"
            android:id="@+id/minusOut"
            android:layout_weight="0"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/extraCol"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="66dp"
            android:layout_margin="5dp"
            android:text="Save Scores"
            android:background="@drawable/woodenbutton"
            android:textSize="14sp"
            android:id="@+id/saveGameButton"
            android:layout_weight="1"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="66dp"
            android:layout_margin="5dp"
            android:background="@drawable/woodenbutton"
            android:text="New Batter"
            android:textSize="15sp"
            android:id="@+id/newBatter"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>