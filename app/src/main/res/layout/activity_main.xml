                android:id="@+id/minusOut"
                android:minHeight="30dp"
                android:layout_column="2"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Inning â†‘1"
                android:id="@+id/inningText"
                android:textSize="35sp"
                android:textColor="@android:color/background_light"
                android:layout_column="0"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:text="+"
                android:layout_marginLeft="25dp"
                android:id="@+id/plusInning"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/laces"
                android:minHeight="10dp"
                android:layout_column="1" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/laces"
                android:text="-"
                android:id="@+id/minusInning"
                android:minHeight="30dp"
                android:layout_column="2" />

        </TableRow>

         <TableRow>
             <Button
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="New Batter"
                 android:id="@+id/newBatter"
                 android:minHeight="50dp"
                 android:layout_column="0"/>
             <Button
                 style="?android:attr/buttonStyleSmall"
                 android:layout_width="50dp"
                 android:layout_height="match_parent"
                 android:text="Coach View"
                 android:id="@+id/coachButton"
                 android:layout_column="0" />
             <Button
                 style="?android:attr/buttonStyleSmall"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:text="Weather"
                 android:id="@+id/weatherButton"
                 android:layout_column="0" />
         </TableRow>
     </TableLayout>

</LinearLayout>



