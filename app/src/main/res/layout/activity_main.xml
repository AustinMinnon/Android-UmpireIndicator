<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/scoreCol">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home 0"
            android:id="@+id/homeText"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Away 0"
            android:id="@+id/awayText"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/optionCol"
        android:layout_below="@+id/scoreCol">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:layout_marginLeft="15dp"
            android:text="+"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/colorPlus"
            android:id="@+id/plusHome"
            android:layout_weight="1"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:layout_marginLeft="15dp"
            android:text="-"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/colorMinus"
            android:id="@+id/minusHome"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:layout_marginLeft="15dp"
            android:text="+"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/colorPlus"
            android:id="@+id/plusAway"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/laces"
        android:layout_marginLeft="15dp"
        android:text="-"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/colorMinus"
        android:id="@+id/minusAway"
        android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/teamCol"
        android:layout_below="@+id/optionCol">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/homeAltText"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/awayAltText"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:id="@+id/inningCol"
        android:layout_below="@+id/teamCol">



        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="+"
            android:textColor="@color/colorPlus"
            android:id="@+id/plusInning"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:layout_weight="0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="Inning 1â†‘"
            android:id="@+id/inningText"
            android:textSize="25sp"
            android:textColor="@android:color/background_light"
            android:layout_weight="1"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:text="-"
            android:textColor="@color/colorMinus"
            android:id="@+id/minusInning"
            android:layout_weight="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/outCol"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Ball 0"
            android:id="@+id/ballText"
            android:textSize="25sp"
            android:textColor="@android:color/background_light"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="+"
            android:textColor="@color/colorPlus"
            android:id="@+id/plusBall"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:layout_weight="0" />

        <Button
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:text="-"
            android:textColor="@color/colorMinus"
            android:id="@+id/minusBall"
            android:layout_weight="0"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/strikeCol">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Strike 0"
            android:id="@+id/strikeText"
            android:layout_marginLeft="15dp"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:layout_weight="1"




            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:text="+"
            android:textColor="@color/colorPlus"
            android:id="@+id/plusStrike"
            android:layout_weight="0"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:text="-"
            android:textColor="@color/colorMinus"
            android:id="@+id/minusStrike"
            android:layout_weight="0"
            />

        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/inningCol"
        android:id="@+id/outCol">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="+"
            android:textColor="@color/colorPlus"
            android:id="@+id/plusOut"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:layout_weight="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:text="Out 0"
            android:id="@+id/outText"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:layout_weight="1"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/laces"
            android:text="-"
            android:textColor="@color/colorMinus"
            android:id="@+id/minusOut"
            android:layout_weight="0"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/strikeCol"
        android:id="@+id/extraCol">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Scores"
            android:textSize="14sp"
            android:id="@+id/saveGameButton"
            android:layout_weight="1"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Batter"
            android:textSize="15sp"
            android:id="@+id/newBatter"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>